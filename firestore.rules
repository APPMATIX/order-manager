
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Returns true if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Returns true if the user's custom claim 'userType' is 'admin'.
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    match /users/{userId} {
      // Admins can read any user profile.
      // Users can only read their own profile.
      allow get: if isOwner(userId) || isAdmin();
      
      // Admins can list all users.
      allow list: if isAdmin();
      
      // An authenticated user can create their own user document.
      // An admin can create any user document (e.g., creating an admin account).
      allow create: if isAuthenticated();
      
      // Users can update their own profile. Admins can update any profile.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }
    
    match /signup_tokens/{tokenId} {
      // Only admins can create, read, or list signup tokens.
      allow read, write: if isAdmin();
    }

    // This rule covers all vendor-specific subcollections (e.g., clients, products, orders).
    match /users/{userId}/{collection}/{docId} {
      // A user can perform any action on their own subcollection data.
      // An admin can also perform any action on any user's subcollection data.
      allow read, write: if isOwner(userId) || isAdmin();
    }
  }
}

    