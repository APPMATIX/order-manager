
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Returns true if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Role checks now use Custom Claims from the user's ID token.
    // This allows them to be used safely in 'list' operations.
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }

    function isVendor() {
      return isAuthenticated() && request.auth.token.role == 'vendor';
    }

    function isClient() {
      return isAuthenticated() && request.auth.token.role == 'client';
    }
    
    // This function still uses get() and CANNOT be used in 'list' rules.
    // It is safe for get/read/update/write rules.
    function getClientVendorId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.vendorId;
    }

    // --- COLLECTION RULES ---

    // Rules for individual user documents
    match /users/{userId} {
      // Allow create for any user during signup flow.
      allow create: if true; 
      // An admin can read any user's data.
      // A user can read/update their own data.
      // A vendor can read their own client's data.
      allow read, update: if isOwner(userId) || isAdmin() || (isVendor() && getClientVendorId(userId) == request.auth.uid);
      // Only admin can delete, and they cannot delete themselves.
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    // Rule for LISTING users. Now uses the safe claim-based isAdmin() function.
    match /users/{document=**} {
      allow list: if isAdmin();
    }

    // Rules for the public vendors collection
    match /vendors/{vendorId} {
      // Allow a vendor to create/update their own public profile.
      allow write: if isOwner(vendorId);
      // Allow anyone to read a single vendor document.
      allow get: if true;
    }

    match /vendors/{document=**} {
      // Allow ANYONE to list all vendors for the signup dropdown.
      allow list: if true;
    }
    

    // Rules for vendor-owned subcollections (clients, products, etc.)
    match /users/{userId}/{collection} {
        // Admins can read anything.
        // Vendors can list their own private data.
        // Clients can list products of their assigned vendor.
        allow list: if isAdmin() || isOwner(userId) || (isClient() && collection == 'products');
    }

    match /users/{userId}/{collection}/{docId} {
      // Admins can read anything.
      // A vendor can read/write their own private data.
      // A client can read products from their assigned vendor.
      allow read: if isAdmin() || isOwner(userId) || (isClient() && collection == 'products');
      allow write: if isOwner(userId);
    }

    // Rules for the global orders collection
    match /orders/{orderId} {
        // A client can create an order. We check they are creating it for themselves.
        allow create: if isClient() && request.resource.data.clientId == request.auth.uid;
        
        // A client can read their own orders.
        // A vendor can read orders for their clients.
        // An admin can read any order.
        // This rule applies to both individual document reads (get) and queries (list).
        allow read, list: if isAdmin() 
                        || (isVendor() && resource.data.vendorId == request.auth.uid) 
                        || (isClient() && resource.data.clientId == request.auth.uid);

        // A vendor can update orders for their clients.
        allow update: if isVendor() && resource.data.vendorId == request.auth.uid;
    }
    
    // Rules for individual signup tokens.
    match /signup_tokens/{tokenId} {
      // Allow ANYONE to check a specific token (for signup). This is safe as tokens are non-guessable.
      allow get: if true;
      // Allow ANYONE to mark a token as 'used', but only if it's currently active and not expired.
      // This is necessary for the signup transaction.
      allow update: if request.resource.data.status == 'used'
                      && resource.data.status == 'active'
                      && request.time < resource.data.expiresAt;
      // Only admins can create or delete tokens.
      allow create, delete: if isAdmin();
    }
    
    // Rule for LISTING tokens. Now uses the safe claim-based isAdmin() function.
    match /signup_tokens/{document=**} {
      allow list: if isAdmin();
    }
  }
}
