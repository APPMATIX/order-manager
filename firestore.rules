
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Returns true if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Returns true if the user is creating the first document in the users collection
    function isFirstUser() {
        return !exists(/databases/$(database)/documents/users/$(request.auth.uid)) && !existsAfter(/databases/$(database)/documents/users);
    }

    match /users/{userId} {
      // Any authenticated user can create a user profile, but the first user is special.
      // Subsequent users are vendors.
      allow create: if isAuthenticated() && request.resource.data.userType == 'vendor';
      
      // Only the user themself can read or update their own profile.
      allow get, update, delete: if isOwner(userId);
      
      // No one can list all users for security reasons.
      allow list: if false;
    }

    // This rule covers all subcollections under a user's document (e.g., clients, products, orders).
    match /users/{userId}/{collection}/{docId} {
      // A user can only perform actions on their own subcollection data.
      allow read, write: if isOwner(userId);
    }
  }
}
