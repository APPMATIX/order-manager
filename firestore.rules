rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- HELPERS ----------
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fetches the user document to check roles
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user has a specific role (checks both token and profile)
    function hasRole(role) {
      return isAuthenticated() && (
        request.auth.token.role == role || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == role)
      );
    }

    function isAdmin() { return hasRole('admin'); }
    function isVendor() { return hasRole('vendor'); }
    function isClient() { return hasRole('client'); }

    // ---------- RULES ----------

    // User Profiles & Subcollections
    match /users/{userId} {
      // Profile access
      allow get: if isAuthenticated(); 
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && request.auth.uid != userId;

      // 1. PURCHASE BILLS (Vendor's own procurement)
      match /purchase_bills/{billId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /purchase_bills {
        allow list: if isOwner(userId) || isAdmin();
      }

      // 2. ORDERS (Sales transactions)
      match /orders/{orderId} {
        allow get: if isOwner(userId) 
                   || isAdmin() 
                   || (isAuthenticated() && resource.data.clientId == request.auth.uid);
        
        allow write: if isOwner(userId) 
                     || isAdmin() 
                     || (isClient() && request.resource.data.clientId == request.auth.uid);
      }
      match /orders {
        // Admin can list all orders for analytics. 
        // Vendor can list their own. 
        // Client can list (queried with filters).
        allow list: if isOwner(userId) || isAdmin() || isClient();
      }

      // 3. PRODUCTS (Vendor's catalog)
      match /products/{productId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId) || isAdmin();
      }
      match /products {
        allow list: if isAuthenticated();
      }

      // 4. CLIENTS (Vendor's client directory)
      match /clients/{clientId} {
        allow read, write: if isOwner(userId) || isAdmin() || request.auth.uid == clientId;
      }
      match /clients {
        allow list: if isOwner(userId) || isAdmin();
      }
    }

    // Vendors Registry (Public identifiers)
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(vendorId) || isAdmin();
    }

    // Signup Tokens
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow list: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if request.resource.data.status == 'used'
                    && resource.data.status == 'active'
                    && request.time < resource.data.expiresAt;
    }
  }
}