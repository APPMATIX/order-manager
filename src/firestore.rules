rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- HELPERS ----------
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Safely fetch user data to check roles
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == 'admin')
      );
    }

    function isVendor() {
      return isAuthenticated() && (
        request.auth.token.role == 'vendor' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == 'vendor')
      );
    }

    function isClient() {
      return isAuthenticated() && (
        request.auth.token.role == 'client' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == 'client')
      );
    }

    // ---------- USERS & SUBCOLLECTIONS ----------
    
    match /users/{userId} {
      // User Profile Rules
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && request.auth.uid != userId;

      // 1. PURCHASE BILLS
      match /purchase_bills/{billId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      // 2. ORDERS
      match /orders/{orderId} {
        // Read single order
        allow get: if isAdmin() 
                   || isOwner(userId) 
                   || (isClient() && resource.data.clientId == request.auth.uid);
        
        // List orders (Clients MUST filter by clientId in their query)
        allow list: if isAdmin() 
                    || isOwner(userId) 
                    || isClient();

        // Create order: Allowed for Owner (Vendor), Admin, or the Client themselves
        allow create: if isOwner(userId) 
                      || isAdmin() 
                      || (isClient() && request.resource.data.clientId == request.auth.uid);

        allow update, delete: if isAdmin() || isOwner(userId);
      }

      // 3. PRODUCTS
      match /products/{productId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId) || isAdmin();
      }

      // 4. CLIENTS
      match /clients/{clientId} {
        // Allow the Vendor (Owner) to manage their client list, or the client to see their own entry
        allow read: if isOwner(userId) || isAdmin() || request.auth.uid == clientId;
        allow write: if isOwner(userId) || isAdmin() || request.auth.uid == clientId;
      }
    }

    // ---------- VENDORS ----------
    
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(vendorId) || isAdmin();
    }

    // ---------- SIGNUP TOKENS ----------
    
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow list: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if request.resource.data.status == 'used'
                    && resource.data.status == 'active'
                    && request.time < resource.data.expiresAt;
    }
  }
}