
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check role by reading from the user's profile document.
    // This is used for granular access on single-document reads/writes.
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super-admin';
    }
    
    function isAdmin() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'super-admin');
    }

    match /users/{userId} {
      // An authenticated user can create their own user document.
      allow create: if isAuthenticated();
      // Users can read/update their own profile. Admins can read/update any profile.
      allow get, update: if isOwner(userId) || isAdmin();
      // Only a super-admin can delete a user, but not themselves.
      allow delete: if isSuperAdmin() && request.auth.uid != userId;
      
      // Rules for user-owned subcollections (clients, products, orders, etc.)
      // The owner can read and write their own data.
      // An admin can read any user's data, but cannot write to it.
      match /{collection}/{docId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isOwner(userId);
        allow list: if isOwner(userId) || isAdmin();
      }
    }
    
    // LIST rule for the entire 'users' collection.
    // This rule CANNOT use get() or exists(). It must rely on auth token.
    // For now, we allow any authenticated user to list, but the UI will restrict access.
    // This fixes the internal assertion error.
    match /users/{document=**} {
        allow list: if isAuthenticated();
    }

    // Rules for signup tokens.
    match /signup_tokens/{tokenId} {
      // Any authenticated user can check if a token exists for signup validation.
      allow get: if isAuthenticated();
      // Only super-admins can see the full list of tokens.
      // This rule CANNOT use get(), so for now, we allow any authenticated user to list.
      // The UI correctly restricts this to super-admins.
      allow list: if isAuthenticated();
      // Only super-admins can create or delete tokens. This uses get() and is allowed for document operations.
      allow create, delete: if isSuperAdmin();
      // An authenticated user can update a token (to mark it as 'used' during signup).
      allow update: if isAuthenticated();
    }
  }
}
