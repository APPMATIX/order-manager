rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- HELPERS ----------
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fetches the user document to check roles
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user has a specific role (checks both token and profile)
    function hasRole(role) {
      return isAuthenticated() && (
        request.auth.token.role == role || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == role)
      );
    }

    function isAdmin() { return hasRole('admin'); }
    function isVendor() { return hasRole('vendor'); }
    function isClient() { return hasRole('client'); }

    // ---------- RULES ----------

    // User Profiles
    match /users/{userId} {
      // Profile access: Admins see all, Owners see own, Clients see their Vendor's branding
      allow get: if isAuthenticated(); 
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && request.auth.uid != userId;
      allow list: if isAdmin();

      // Sub-collections: Using explicit matches instead of recursive wildcards 
      // to ensure variable comparisons (e.g. colName == 'orders') work as string comparisons.
      
      match /purchase_bills/{billId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /purchase_bills {
        allow list: if isOwner(userId) || isAdmin();
      }

      match /orders/{orderId} {
        allow get: if isOwner(userId) 
                   || isAdmin() 
                   || (isAuthenticated() && resource.data.clientId == request.auth.uid);
        
        allow write: if isOwner(userId) 
                     || isAdmin() 
                     || (isClient() && request.resource.data.clientId == request.auth.uid);
      }
      match /orders {
        // Vendors list own, Admins list all, Clients list their own filtered by clientId
        allow list: if isOwner(userId) || isAdmin() || isClient();
      }

      match /products/{productId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId) || isAdmin();
      }
      match /products {
        allow list: if isAuthenticated();
      }

      match /clients/{clientId} {
        allow read, write: if isOwner(userId) || isAdmin() || request.auth.uid == clientId;
      }
      match /clients {
        allow list: if isOwner(userId) || isAdmin();
      }
    }

    // Vendors Registry (Public identifiers for signup)
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow list: if isAuthenticated();
      allow write: if isOwner(vendorId) || isAdmin();
    }

    // Signup Tokens
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create, delete: if isAdmin();
      allow update: if request.resource.data.status == 'used'
                    && resource.data.status == 'active'
                    && request.time < resource.data.expiresAt;
    }
  }
}