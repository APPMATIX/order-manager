rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- HELPERS ----------
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isAuthenticated() && (
        request.auth.token.role == role || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getUserData().userType == role)
      );
    }

    function isAdmin() { return hasRole('admin'); }
    function isVendor() { return hasRole('vendor'); }
    function isClient() { return hasRole('client'); }

    // ---------- RULES ----------

    match /users/{userId} {
      allow get: if isAuthenticated(); 
      allow list: if isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin() && request.auth.uid != userId;

      // Purchase Bills
      match /purchase_bills/{billId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
      match /purchase_bills {
        allow list: if isOwner(userId) || isAdmin();
      }

      // Orders - Strict Ownership Model
      match /orders/{orderId} {
        allow list: if isOwner(userId) || isAdmin();
        
        // Allow access if owner, admin, or participant mentioned in metadata
        allow get: if isOwner(userId) || isAdmin() 
                   || (isAuthenticated() && (resource.data.clientId == request.auth.uid || resource.data.vendorId == request.auth.uid));
        
        allow write: if isOwner(userId) || isAdmin() 
                     || (isAuthenticated() && (request.resource.data.clientId == request.auth.uid || request.resource.data.vendorId == request.auth.uid));
      }

      // Products
      match /products/{productId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId) || isAdmin();
      }
      match /products {
        allow list: if isAuthenticated() || isAdmin();
      }

      // Vendor's internal client registry
      match /clients/{clientId} {
        allow read, write: if isOwner(userId) || isAdmin() || request.auth.uid == clientId;
      }
      match /clients {
        allow list: if isOwner(userId) || isAdmin();
      }
    }

    // Public Vendor Identifiers for signup
    match /vendors/{vendorId} {
      allow read, list: if isAuthenticated();
      allow write: if isOwner(vendorId) || isAdmin();
    }

    // Invitation Tokens
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow list: if isAdmin();
      allow create, delete: if isAdmin();
      allow update: if request.resource.data.status == 'used'
                    && resource.data.status == 'active'
                    && request.time < resource.data.expiresAt;
    }
  }
}