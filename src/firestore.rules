
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Returns true if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Role checks: Check both Custom Claims (Auth Token) and Firestore User Profile document field
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin')
      );
    }

    function isVendor() {
      return isAuthenticated() && (
        request.auth.token.role == 'vendor' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'vendor')
      );
    }

    function isClient() {
      return isAuthenticated() && (
        request.auth.token.role == 'client' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'client')
      );
    }
    
    function getClientVendorId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.vendorId;
    }

    // --- COLLECTION RULES ---

    // Rules for individual user documents
    match /users/{userId} {
      allow create: if true; 
      allow read, update: if isOwner(userId) || isAdmin() || (isVendor() && getClientVendorId(userId) == request.auth.uid);
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    // Allow any logged-in user to see the list for vendor selection and admin identification.
    match /users/{document=**} {
      allow list: if isAuthenticated();
    }

    // Rules for the public vendors collection
    match /vendors/{vendorId} {
      allow write: if isOwner(vendorId);
      allow list, get: if isAuthenticated();
    }
    
    // Rules for vendor-owned subcollections (clients, products, orders etc.)
    match /users/{userId}/{collection}/{docId} {
      allow read: if isAdmin() 
                  || isOwner(userId) 
                  || (isClient() && (collection == 'products' || collection == 'orders'));
      
      allow write: if isOwner(userId) 
                   || (isClient() && collection == 'orders' && request.resource.data.clientId == request.auth.uid);
    }
    
    match /users/{userId}/{collection=**} {
        allow list: if isAdmin() 
                    || isOwner(userId)
                    || (isClient() && (collection == 'products' || collection == 'orders'));
    }

    // Rules for individual signup tokens.
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow update: if request.resource.data.status == 'used'
                      && resource.data.status == 'active'
                      && (request.time < resource.data.expiresAt || !exists(resource.data.expiresAt));
      
      // Bootstrap hole: Allow specific user to create tokens to get the system started
      allow create: if isAdmin() || request.auth.token.email == "kevinparackal10@gmail.com";
      allow delete: if isAdmin();
    }
    
    match /signup_tokens/{document=**} {
      allow list: if isAdmin();
    }
  }
}
