
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fetches the user document once to check roles efficiently
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' || 
        getUserData().userType == 'admin'
      );
    }

    function isVendor() {
      return isAuthenticated() && (
        request.auth.token.role == 'vendor' || 
        getUserData().userType == 'vendor'
      );
    }

    function isClient() {
      return isAuthenticated() && (
        request.auth.token.role == 'client' || 
        getUserData().userType == 'client'
      );
    }

    // --- COLLECTION RULES ---

    // Rules for individual user profiles
    match /users/{userId} {
      allow create: if isAuthenticated(); 
      
      allow read: if isOwner(userId) 
                  || isAdmin() 
                  // Allow clients to read their vendor's branding info
                  || (isAuthenticated() && resource.data.userType == 'vendor')
                  // Allow vendors to read their own clients' profiles
                  || (isVendor() && resource.data.vendorId == request.auth.uid);
                  
      allow update: if isOwner(userId) 
                    || isAdmin()
                    // Allow vendors to update their clients (e.g. credit limits)
                    || (isVendor() && resource.data.vendorId == request.auth.uid);
                    
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    // Global listing for users (Required for search/selection)
    match /users {
      allow list: if isAuthenticated();
    }

    // Public Vendors Registry (Read-only for signup)
    match /vendors/{vendorId} {
      allow write: if isOwner(vendorId) || isAdmin();
      allow list, get: if isAuthenticated();
    }
    
    // Vendor-Owned Subcollections (Clients, Products, Orders, etc.)
    match /users/{userId}/{collection}/{docId} {
      // Individual document access logic
      allow read: if isAdmin() 
                  || isOwner(userId) 
                  || (isClient() && collection == 'products')
                  || (isClient() && collection == 'orders' && resource.data.clientId == request.auth.uid)
                  || (isClient() && collection == 'clients' && docId == request.auth.uid);
      
      allow write: if isOwner(userId) 
                   || (isClient() && collection == 'orders' && request.resource.data.clientId == request.auth.uid)
                   || (isAuthenticated() && collection == 'clients' && docId == request.auth.uid);
    }
    
    // Listing logic for vendor-owned collections
    match /users/{userId}/{collection} {
        allow list: if isAdmin() 
                    || isOwner(userId)
                    || (isClient() && (collection == 'products' || collection == 'orders' || collection == 'clients'));
    }

    // Security Rules for Signup Tokens
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow update: if request.resource.data.status == 'used'
                      && resource.data.status == 'active'
                      && request.time < resource.data.expiresAt;
      allow create, delete: if isAdmin();
      allow list: if isAuthenticated();
    }
  }
}
