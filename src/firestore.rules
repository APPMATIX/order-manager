
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Returns true if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check role by reading from the user's profile document.
    // IMPORTANT: This function CANNOT be used in 'list' rules.
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.userType;
    }
    
    // Checks if the user's role is 'admin'.
    // IMPORTANT: This function CANNOT be used in 'list' rules.
    function isAdmin() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'admin';
    }
    
    // Checks if the user's role is 'vendor'.
    function isVendor() {
      return isAuthenticated() && getUserRole(request.auth.uid) == 'vendor';
    }
    
    // Checks if the user's role is 'client'.
    function isClient() {
        return isAuthenticated() && getUserRole(request.auth.uid) == 'client';
    }
    
    function getClientVendorId(userId) {
        return get(/databases/$(database)/documents/users/$(userId)).data.vendorId;
    }

    // Rules for individual user documents
    match /users/{userId} {
      // Allow create for any user during signup flow.
      allow create: if true; 
      // An admin can read any user's data.
      // A user can read/update their own data.
      // A vendor can read their own client's data.
      allow read, update: if isOwner(userId) || isAdmin() || (isVendor() && getClientVendorId(userId) == request.auth.uid);
      // Only admin can delete, and they cannot delete themselves.
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    // Rule for LISTING users.
    match /users/{document=**} {
      // ONLY admins can list all users. This prevents data leakage.
      allow list: if isAdmin();
    }

    // Rules for the public vendors collection
    match /vendors/{vendorId} {
      // Allow anyone to read the list of vendors or a single vendor document.
      // This is required for the client signup page dropdown.
      allow get, list: if true;
      // Only the vendor can create or update their own public profile.
      allow write: if isOwner(vendorId);
    }
    

    // Rules for vendor-owned subcollections (clients, products, etc.)
    match /users/{userId}/{collection} {
        // Admins can read anything.
        // Vendors can list their own private data.
        // Clients can list products of their assigned vendor.
        allow list: if isAdmin() || isOwner(userId) || (isClient() && collection == 'products' && getClientVendorId(request.auth.uid) == userId);
    }

    match /users/{userId}/{collection}/{docId} {
      // Admins can read anything.
      // A vendor can read/write their own private data.
      // A client can read products from their assigned vendor.
      allow read: if isAdmin() || isOwner(userId) || (isClient() && collection == 'products' && getClientVendorId(request.auth.uid) == userId);
      allow write: if isOwner(userId);
    }

    // Rules for the global orders collection
    match /orders/{orderId} {
        // A client can create an order for their assigned vendor.
        allow create: if isClient() && request.resource.data.clientId == request.auth.uid && request.resource.data.vendorId == getClientVendorId(request.auth.uid);
        // A client can read their own orders.
        // A vendor can read/update orders for their clients.
        // An admin can read any order.
        allow read: if isAdmin() || (isVendor() && resource.data.vendorId == request.auth.uid) || (isClient() && resource.data.clientId == request.auth.uid);
        allow update: if isVendor() && resource.data.vendorId == request.auth.uid;
    }
    
    // Rules for individual signup tokens.
    match /signup_tokens/{tokenId} {
      // Allow ANYONE to check a specific token (for signup). This is safe as tokens are non-guessable.
      allow get: if true;
      // Allow ANYONE to mark a token as 'used', but only if it's currently active and not expired.
      // This is necessary for the signup transaction.
      allow update: if request.resource.data.status == 'used'
                      && resource.data.status == 'active'
                      && request.time < resource.data.expiresAt;
      // Only admins can create or delete tokens. These rules can use get().
      allow create, delete: if isAdmin();
    }
    
    // Rule for LISTING tokens. This must NOT use get().
    // This allows authenticated users to list tokens, which the admin panel requires.
    match /signup_tokens/{document=**} {
      allow list: if isAuthenticated() && isAdmin();
    }
  }
}
