
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fetches the user document to check roles
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.role == 'admin' || 
        getUserData().userType == 'admin'
      );
    }

    function isVendor() {
      return isAuthenticated() && (
        request.auth.token.role == 'vendor' || 
        getUserData().userType == 'vendor'
      );
    }

    function isClient() {
      return isAuthenticated() && (
        request.auth.token.role == 'client' || 
        getUserData().userType == 'client'
      );
    }

    // --- COLLECTION RULES ---

    // Root users collection
    match /users/{userId} {
      allow create: if isAuthenticated();
      
      // Owners and Admins have full access
      allow read, write: if isOwner(userId) || isAdmin();
      
      // Allow vendors to read and update their linked clients
      allow read, update: if isVendor() && get(/databases/$(database)/documents/users/$(userId)).data.vendorId == request.auth.uid;
      
      // Allow anyone to read vendor profiles for branding/invoicing info
      allow read: if get(/databases/$(database)/documents/users/$(userId)).data.userType == 'vendor';
    }
    
    // Global listing for searching/selecting users (Selector components)
    match /users {
      allow list: if isAuthenticated();
    }

    // Public Vendors Registry (Read-only for signup)
    match /vendors/{vendorId} {
      allow write: if isOwner(vendorId) || isAdmin();
      allow list, get: if isAuthenticated();
    }
    
    // Vendor-Owned Subcollections (Clients, Products, Orders, etc.)
    match /users/{userId}/{collection}/{docId} {
      // Document level access
      allow read: if isAdmin() 
                  || isOwner(userId) 
                  || (isClient() && collection == 'products')
                  || (isClient() && collection == 'orders' && resource.data.clientId == request.auth.uid)
                  || (isClient() && collection == 'clients' && docId == request.auth.uid);
      
      allow write: if isAdmin()
                   || isOwner(userId) 
                   || (isClient() && collection == 'orders' && request.resource.data.clientId == request.auth.uid)
                   || (isAuthenticated() && collection == 'clients' && docId == request.auth.uid);
    }
    
    // Listing logic for vendor-owned collections (queries)
    match /users/{userId}/{collection} {
        allow list: if isAdmin() 
                    || isOwner(userId)
                    || (isClient() && (collection == 'products' || collection == 'orders' || collection == 'clients'));
    }

    // Security Rules for Signup Tokens
    match /signup_tokens/{tokenId} {
      allow get: if true;
      allow list: if isAuthenticated();
      allow create, delete: if isAdmin();
      allow update: if request.resource.data.status == 'used'
                      && resource.data.status == 'active'
                      && request.time < resource.data.expiresAt;
    }
  }
}
